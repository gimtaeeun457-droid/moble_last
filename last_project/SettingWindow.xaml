<Window x:Class="last_project.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:last_project"
        mc:Ignorable="d"
        Title="SettingWindow" Height="450" Width="550"
        Background="#FF2D2D30">
    <TabControl>
        <TabItem Header="수동 제어">
            <Grid Margin="10">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF4F4F52"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10, 5"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="15"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"
                                                          Margin="{TemplateBinding Padding}"
                                                          RecognizesAccessKey="True"
                                                          Content="{TemplateBinding Content}"
                                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                                          TextElement.Foreground="{TemplateBinding Foreground}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF68686A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style TargetType="GroupBox">
                        <Setter Property="Foreground" Value="#FFCCCCCC"/>
                        <Setter Property="BorderBrush" Value="#FF4F4F52"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Margin" Value="5"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>

                    <Style x:Key="LogBoxStyle" TargetType="TextBox">
                        <Setter Property="Background" Value="#FF1E1E1E"/>
                        <Setter Property="Foreground" Value="#FFDCDCDC"/>
                        <Setter Property="BorderBrush" Value="#FF4F4F52"/>
                        <Setter Property="IsReadOnly" Value="True"/>
                        <Setter Property="AcceptsReturn" Value="True"/>
                        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                        <Setter Property="FontFamily" Value="Consolas"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <GroupBox Header="차량 이동" Grid.Row="0" Grid.Column="0" MinWidth="150">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Button x:Name="ForwardButton" Content="▲ 전진" Width="100" Height="30" 
                                MouseDown="ForwardButton_MouseDown" 
                                MouseUp="ForwardButton_MouseUp" />

                        <Button x:Name="StopButton" Content="■ 정지" Width="100" Height="35" FontWeight="Bold" Margin="5,10,5,10"
                                Click="StopButton_Click" />

                        <Button x:Name="BackwardButton" Content="▼ 후진" Width="100" Height="30" 
                                MouseDown="BackwardButton_MouseDown" 
                                MouseUp="BackwardButton_MouseUp" />
                    </StackPanel>
                </GroupBox>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical">
                    <GroupBox Header="속도 조절">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <Label Content="현재 속도:" VerticalAlignment="Center" Foreground="White"/>
                                <TextBlock x:Name="SpeedValueText" Text="150" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="White"/>
                            </StackPanel>

                            <Slider x:Name="SpeedSlider" Minimum="0" Maximum="255" Value="150" Margin="5"
                                    MinWidth="200" IsSnapToTickEnabled="True" TickFrequency="1" 
                                    ValueChanged="SpeedSlider_ValueChanged" />
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="보조 기능">
                        <Button x:Name="HonkButton" Content="경적 울리기" Width="120" Height="30" HorizontalAlignment="Left" 
                                Click="HonkButton_Click" />
                    </GroupBox>
                </StackPanel>

                <GroupBox Header="명령 로그" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Padding="5">
                    <TextBox x:Name="LogTextBox" 
                             Style="{StaticResource LogBoxStyle}"
                             Text="[로그 창] 프로그램이 시작되었습니다.&#x0a;"/>
                </GroupBox>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
