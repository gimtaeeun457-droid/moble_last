<UserControl x:Class="last_project.WpfButtonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="160"
             Background="Black" Height="Auto">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Height" Value="87" />
            <Setter Property="Margin" Value="3, 10, 3, 10" />
            <Setter Property="Background" Value="#FF4A4A4A" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF6A6A6A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical" Margin="0,70,0,0">
        <Button x:Name="BtnBalju" Content="Order confirmation" Click="BtnBalju_Click" />
        <Button x:Name="BtnTonggye" Content="statistics" Click="BtnTonggye_Click" />
        <Button x:Name="BtnLog" Content="picture Log" Click="BtnLog_Click" />
        <Button x:Name="BtnSetting" Content="Setting" Click="BtnSetting_Click" />
        <Button x:Name="BtnAppLog" Content="Log" Click="BtnAppLog_Click" />
    </StackPanel>
</UserControl>