<UserControl x:Class="last_project.WpfMyProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="900"
             Background="#FF1E1E1E" Foreground="White">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Border Width="200" Height="200" CornerRadius="100" BorderBrush="#FF444444" BorderThickness="2" Margin="0,0,0,20"
                    Cursor="Hand"
                    MouseLeftButtonDown="ProfileImage_Click">
                <Border.Background>
                    <ImageBrush x:Name="ProfileImgBrush" Stretch="UniformToFill"/>
                </Border.Background>
                <Grid>
                    <TextBlock x:Name="TxtNoImg" Text="No Image" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF666666"/>

                    <Button Content="사진 변경" 
                            VerticalAlignment="Bottom" HorizontalAlignment="Center"
                            Width="100" Height="30" Margin="0,0,0,10"
                            Background="#CC000000" Foreground="White" BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnUploadPhoto_Click"/>
                </Grid>
            </Border>

            <TextBlock x:Name="TxtBigName" Text="홍길동" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock x:Name="TxtBigRole" Text="ROLE: ADMIN" FontSize="14" Foreground="#FF3B82F6" HorizontalAlignment="Center" Margin="0,5,0,30"/>

            <Border Background="#FF2D2D30" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="접속 상태" FontWeight="Bold" Foreground="#FF999999" Margin="0,0,0,10"/>

                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="현재 시간" Foreground="#AAAAAA"/>
                        <TextBlock x:Name="TxtNowTime" Text="12:00:00" HorizontalAlignment="Right" FontWeight="Bold"/>
                    </Grid>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="접속 경과" Foreground="#AAAAAA"/>
                        <TextBlock x:Name="TxtElapsedTime" Text="00:00:00" HorizontalAlignment="Right" Foreground="#FF4ADE80" FontWeight="Bold"/>
                    </Grid>
                    <Grid>
                        <TextBlock Text="최근 접속" Foreground="#AAAAAA"/>
                        <TextBlock x:Name="TxtLastLogin" Text="2023-11-20" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="기본 정보 (Basic Info)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#FFDDDDDD"/>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,15">
                        <TextBlock Text="아이디 (수정불가)" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InId" IsReadOnly="True" Background="#FF333333" Foreground="#AAAAAA" BorderThickness="0" Height="35" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="이름 (실명)" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InName" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,15">
                        <TextBlock Text="닉네임" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InNickname" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="생년월일" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InBirth" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,15">
                        <TextBlock Text="이메일" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InEmail" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,15">
                        <TextBlock Text="연락처" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <TextBox x:Name="InPhone" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" VerticalContentAlignment="Center" Padding="5"/>
                    </StackPanel>
                </Grid>

                <Separator Background="#FF333333" Margin="0,0,0,30"/>

                <TextBlock Text="보안 설정 (Security)" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#FFDDDDDD"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="현재 비밀번호" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PwCurrent" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="새 비밀번호" Foreground="#FF888888" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PwNew" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" Padding="5"/>
                        <TextBlock Text="새 비밀번호 확인" Foreground="#FF888888" Margin="0,10,0,5"/>
                        <PasswordBox x:Name="PwNewConfirm" Height="35" Background="#FF2D2D30" Foreground="White" BorderBrush="#FF555555" Padding="5"/>
                    </StackPanel>
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,0,20">
                    <Button Content="변경사항 저장" Width="150" Height="45" Background="#FF3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="BtnSave_Click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>